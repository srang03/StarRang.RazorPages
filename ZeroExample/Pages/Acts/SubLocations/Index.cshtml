@page
@model ZeroExample.Pages.Acts.SubLocations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubLocation[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubLocation[0].Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubLocation[0].LocationRef.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SubLocation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>

                    @{
                        var locationName = string.Empty;
                        if(item.LocationRef != null)
                        {
                            locationName = item.LocationRef.Name;
                        }
                        else
                        {
                            locationName = "Unknown";
                        }
                    }
                    @locationName
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
